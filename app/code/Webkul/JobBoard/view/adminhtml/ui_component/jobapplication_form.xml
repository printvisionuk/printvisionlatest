<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">jobapplication_form.jobapplication_form_data_source</item>
            <item name="namespace" xsi:type="string">jobapplication_form</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Job Details Form</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Webkul\JobBoard\Block\Adminhtml\Application\BackButton"/>
            <button name="delete" class="Webkul\JobBoard\Block\Adminhtml\Application\DeleteButton"/>
            <button name="save" class="Webkul\JobBoard\Block\Adminhtml\Application\SaveButton"/>
        </buttons>
        <dataScope>data</dataScope>
        <deps>
            <dep>jobapplication_form.jobapplication_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="jobapplication_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider class="Webkul\JobBoard\Model\Application\DataProvider" name="jobapplication_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="jobapplication_details">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="label" xsi:type="string" translate="true">Job Application Details</item>
                <item name="sortOrder" xsi:type="number">20</item>
            </item>
        </argument>
        <field name="job" component="Webkul_JobBoard/js/components/select-job" sortOrder="20" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filterOptions" xsi:type="boolean">true</item>
                    <item name="multiple" xsi:type="boolean">false</item>
                    <item name="showCheckbox" xsi:type="boolean">true</item>
                    <item name="disableLabel" xsi:type="boolean">true</item>
                </item>
            </argument>
            <settings>
                <required>true</required>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>ui/grid/filters/elements/ui-select</elementTmpl>
                <label translate="true">Select Job</label>
                <dataScope>job</dataScope>
                <componentType>field</componentType>
                <listens>
                    <link name="${ $.namespace }.${ $.namespace }:responseData">setParsed</link>
                </listens>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Webkul\JobBoard\Ui\Component\Application\Form\JobOptions"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="firstname" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">application</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-no-html-tags" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">First Name</label>
                <dataScope>firstname</dataScope>
            </settings>
        </field>
        <field name="lastname" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">application</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-no-html-tags" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Last Name</label>
                <dataScope>lastname</dataScope>
            </settings>
        </field>
        <field name="email" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">application</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-no-html-tags" xsi:type="boolean">true</rule>
                    <rule name="validate-email" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">E-mail</label>
                <dataScope>email</dataScope>
            </settings>
        </field>


<!-- Start By Dharms -->
<field name="telephone" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">application</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-no-html-tags" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Telephone Number</label>
                <dataScope>telephone</dataScope>
            </settings>
        </field>

<!-- End By Dharms -->
        
        <field name="address" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">application</item>
                    <item name="template" xsi:type="string">ui/form/field</item>
                    <item name="wysiwyg" xsi:type="boolean">false</item>
                    <item name="rows" xsi:type="number">4</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-no-html-tags" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Address</label>
                <dataScope>address</dataScope>
            </settings>
        </field>


        <field name="qualification" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">application</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-no-html-tags" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Educational Qualification</label>
                <dataScope>qualification</dataScope>
            </settings>
        </field>
        <field name="experience" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Webkul\JobBoard\Model\Source\Experience</item>
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">application</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-no-html-tags" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Job Experience (in Yrs.)</label>
                <dataScope>experience</dataScope>
            </settings>
        </field>
        <field name="position" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">application</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-no-html-tags" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Current / Previous Job Position</label>
                <dataScope>position</dataScope>
            </settings>
        </field>
        <field name="company" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">application</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-no-html-tags" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Current / Previous Employer Name</label>
                <dataScope>company</dataScope>
            </settings>
        </field>
        <field name="resume" formElement="fileUploader">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</item>
                    <item name="previewTmpl" xsi:type="string">ui/form/element/uploader/preview</item>
                    <item name="source" xsi:type="string">application</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="url" path="jobboard/application/uploadresume"/>
                    </item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Upload Resume</label>
                <dataScope>resume</dataScope>
            </settings>
        </field>
    </fieldset>
</form>